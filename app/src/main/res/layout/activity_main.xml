<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/XtremeGreen">

    <ImageButton
        android:id="@+id/humButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickHum"
        app:srcCompat="@mipmap/humidity_icon"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/tempButton"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/lightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickLight"
        app:srcCompat="@mipmap/light_icon"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/humButton"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/tempButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickTemp"
        app:srcCompat="@mipmap/temperature_icon"
        android:layout_marginBottom="124dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Temperature"
        android:layout_alignBottom="@+id/tempButton"
        android:layout_alignStart="@+id/humidityText"
        android:layout_marginBottom="19dp" />

    <TextView
        android:id="@+id/lightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Light"
        android:layout_alignBottom="@+id/lightButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/humidityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Humidity"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/lightText" />


</RelativeLayout>
